// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CREATOR
  ADMIN
  SUPER_ADMIN
}

model Roles {
  wallet    String   @id
  roles     Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Winner {
  wallet    String   @id
  bounty    Bounty   @relation(fields: [bountyId], references: [id])
  bountyId  String
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bounty {
  id           String       @id @default(cuid())
  creator      String
  image        String
  title        String
  category     String
  type         String
  wallets      String[]
  deadline     DateTime
  description  String
  ended        Boolean
  todo         String
  evaluation   String
  resources    String
  distribution String
  winnerCount  Int
  totalReward  Int
  pocName      String
  pocTwitter   String
  pocDiscord   String
  submissions  Submission[]
  winners      Winner[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Submission {
  wallet      String
  bounty      Bounty   @relation(fields: [bountyId], references: [id])
  bountyId    String
  link        String[]
  file        String[]
  discord     String
  twitter     String
  telegram    String
  email       String
  description String
  reviewed    Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@id([wallet, bountyId])
}
