// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CREATOR
  ADMIN
  SUPER_ADMIN
}

model Roles {
  wallet String @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roles Role[]
}

model Winner {
  wallet String @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  amount Int
}

model Bounty {
  id String @id @default(cuid())
  creator String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image String
  title String
  category String
  type String
  wallets String[]
  deadline DateTime
  description String
  todo String
  evaluation String
  resources String
  distribution String
  winnerCount Int
  totalReward Int
  pocName String
  pocTwitter String
  pocDiscord String
}